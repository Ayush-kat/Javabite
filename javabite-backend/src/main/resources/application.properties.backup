# Application Name
spring.application.name=javabite-backend

# Server Configuration (Render sets PORT environment variable)
server.port=${PORT:8080}

# MySQL Database Configuration (Railway)
# Use environment variables for production
spring.datasource.url=${DATABASE_URL:jdbc:mysql://localhost:3306/javabite_coffee}
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:mysql123}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Connection Pool Configuration (Important for free tier)
spring.datasource.hikari.maximum-pool-size=5
spring.datasource.hikari.minimum-idle=2
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.idle-timeout=300000
spring.datasource.hikari.max-lifetime=1200000

# JPA Configuration
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.jdbc.time_zone=UTC

# Logging (Reduce logging in production)
logging.level.org.springframework.security=INFO
logging.level.com.javabite=INFO
logging.level.org.hibernate.SQL=INFO
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=INFO
logging.level.org.springframework.web=INFO

# Session configuration
server.servlet.session.timeout=30m
server.servlet.session.cookie.http-only=true
server.servlet.session.cookie.secure=${COOKIE_SECURE:false}
server.servlet.session.cookie.same-site=lax

# Email configuration (console logging for now)
spring.mail.host=localhost
spring.mail.port=1025
logging.level.org.springframework.mail=DEBUG

app.email.from=noreply@javabite.com
app.frontend.url=${FRONTEND_URL:http://localhost:3000}

# CORS Origins (set via environment variable)
cors.allowed.origins=${CORS_ORIGINS:http://localhost:3000,http://localhost:5173}

# Production Optimizations
spring.jpa.open-in-view=false
server.compression.enabled=true
server.compression.mime-types=application/json,application/xml,text/html,text/xml,text/plain

# Actuator Health Check
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=always
management.health.db.enabled=true